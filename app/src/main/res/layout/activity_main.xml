<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="info.izumin.android.borderbinder.sample.MainActivity">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:borderLeftWidth="@{@dimen/border_width_light}"
            android:borderLeftColor="@{@color/colorPrimary}"
            android:layout_margin="8dp"
            android:text="border-left: 1dp solid #3F51B5;"/>

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:borderTopWidth="@{@dimen/border_width_light}"
            android:borderTopColor="@{@color/colorPrimary}"
            android:layout_margin="8dp"
            android:text="border-top: 1dp solid #3F51B5;"/>

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:borderRightWidth="@{@dimen/border_width_light}"
            android:borderRightColor="@{@color/colorPrimary}"
            android:layout_margin="8dp"
            android:text="border-bottom: 1dp solid #3F51B5;"/>

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:borderBottomWidth="@{@dimen/border_width_light}"
            android:borderBottomColor="@{@color/colorPrimary}"
            android:layout_margin="8dp"
            android:text="border-bottom: 1dp solid #3F51B5;"/>
    </LinearLayout>
</layout>
